@{
    ViewData["Title"] = "Nivel 1";
}
 <!-- Fondo del nivel -->
    
<div class="nivel-container">
    <!-- Título y subtítulo -->
    <div class="titulo-container">
        <h1 class="titulo-nivel">Nivel 1</h1>
        <p class="subtitulo">Deslizá el objeto al tacho correspondiente</p>
    </div>

    <!-- Overlay Misiones -->
    <div id="overlayMisiones" class="overlay hidden">
        <div class="overlay-content">
            <h2>Misiones</h2>
            <p>Arrastrá los residuos al tacho correcto.</p>
            <button id="cerrarOverlay">Cerrar</button>
        </div>
    </div>

   

        <!-- Personaje -->
        <img src="~/img/Heroe.png" alt="Personaje" class="personaje" />

        <!-- Tachos -->
        <img src="~/img/tachoverde.png" alt="Tacho verde" class="tacho verde" />
        <img src="~/img/tachonegro.png" alt="Tacho negro" class="tacho negro" />

        <!-- Residuos -->
        <img id="banana" src="~/img/banana.png" alt="Banana" class="residuo banana" draggable="true" data-tipo="negro" />
        <img id="bollo" src="~/img/bollo.png" alt="Bollo" class="residuo bollo" draggable="true" data-tipo="negro" />
        <img id="botella" src="~/img/botella.png" alt="Botella" class="residuo botella" draggable="true" data-tipo="verde" />
        <img id="lata" src="~/img/lata.png" alt="Lata" class="residuo lata" draggable="true" data-tipo="verde" />
        <img id="pizza" src="~/img/pizza.png" alt="Pizza" class="residuo pizza" draggable="true" data-tipo="negro" />
        <img id="taper" src="~/img/taper.png" alt="Taper" class="residuo taper" draggable="true" data-tipo="negro" />
        <img id="vasito" src="~/img/vasito.png" alt="Vasito" class="residuo vasito" draggable="true" data-tipo="negro" />
        <img id="diario" src="~/img/diario.png" alt="Diario" class="residuo diario" draggable="true" data-tipo="verde" />
    </div>


@section Scripts {
    <script src="~/js/nivel1.js"></script>
}
@section Scripts {
<script>
function completarNivel(nivel) {
  let completados = JSON.parse(localStorage.getItem("nivelesCompletados")) || [];
  if (!completados.includes(nivel)) completados.push(nivel);
  localStorage.setItem("nivelesCompletados", JSON.stringify(completados));
  window.location.href = "/Home/Niveles";
}
</script>
}