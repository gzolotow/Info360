@{
    ViewData["Title"] = "Niveles";
}

<main class="niveles-container">
  <!-- Fondo -->
  <img src="~/images/fondoniveles.png" alt="Fondo niveles" class="niveles-fondo" />

  <!-- Líneas curvas -->
  <svg class="niveles-lineas" viewBox="0 0 100 100" preserveAspectRatio="none">
    <!-- Tutorial → Nivel 1 -->
    <path d="M 18 65 Q 30 55 42 58" class="linea" />
    <!-- Nivel 1 → Nivel 2 -->
    <path d="M 42 58 Q 52 62 62 58" class="linea" />
    <!-- Nivel 2 → Nivel 3 -->
    <path d="M 62 58 Q 75 52 85 48" class="linea" />
  </svg>

  <!-- Botones -->
  <a asp-controller="Home" asp-action="Tutorial" class="nivel-btn tutorial">Tutorial</a>

  <a asp-controller="Home" asp-action="Nivel1" class="nivel-btn nivel1 desbloqueado">NIVEL 1</a>

  <a asp-controller="Home" asp-action="Nivel2" class="nivel-btn nivel2 bloqueado">NIVEL 2</a>

  <a asp-controller="Home" asp-action="Nivel3" class="nivel-btn nivel3 bloqueado">NIVEL 3</a>
</main>
