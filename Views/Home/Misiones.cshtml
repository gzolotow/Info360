@{
  ViewData["Title"] = "Misiones - Ecoplay";
}

<body>
  <!-- Fondo del juego -->
  <div class="fondo-juego">
    <button class="btn-abrir">Ver misiones</button>
  </div>

  <!-- Ventana flotante -->
  <div class="misiones-modal" id="misiones">
    <button class="cerrar" onclick="cerrarMisiones()">✖</button>

    <div class="titulo">
      <h2>MISIONES</h2>
    </div>

    <div class="misiones-lista">
      <div class="mision">
        <p>Completá el "Nivel 1" 3 veces: 3/3</p>
        <span class="estado completado">completado</span>
      </div>

      <div class="mision">
        <p>Completá el "Nivel 2" sin errores: 0/1</p>
        <span class="estado incompleto">incompleto</span>
      </div>
    </div>

    <div class="temporizador">
      ⏰ 6:00:00
    </div>
  </div>

  <script>
    const modal = document.getElementById('misiones');
    const btnAbrir = document.querySelector('.btn-abrir');

    btnAbrir.addEventListener('click', () => {
      modal.style.display = 'flex';
    });

    function cerrarMisiones() {
      modal.style.display = 'none';
    }
  </script>
</body>
</html>
