@{
  ViewData["Title"] = "ResumenNivel - Ecoplay";
}
<div id="resumenNivelContainer" aria-hidden="true" role="dialog" aria-modal="true" aria-label="Resumen Nivel Completado">
    <section id="resumenNivel">
        <div class="resumen-estrellas" aria-label="Puntuación de estrellas">
            
@for
 
(
var
 i 
=
 
0
;
 i 
<
 
3
;
 i
++
)

            
{

                
var
 estrellaLlena 
=
 i 
<
 Model
.
Estrellas 
?
 
"/imagenes/estrella-llena.png"
 
:
 
"/imagenes/estrella-vacia.png"
;

                
<
img
 
src
=
"
@estrellaLlena
"
 
alt
=
"
Estrella @((i+1))
"
 
/>

            
}

        </div>
        <div class="resumen-datos">
            <span>Completar</span>
            <span>Sin errores</span>
            <span>@Model.TiempoDisplay</span>
        </div>
        <h2 id="resumenTitulo">¡Bien hecho!</h2>
        <div class="resumen-botones">
            <button id="btnCasa" class="btn-resumen btn-casa" title="Volver a niveles" aria-label="Volver a niveles">
                <img src="/imagenes/icon-casa.svg" alt="Casa" />
            </button>
            <button id="btnReiniciar" class="btn-resumen btn-reiniciar" title="Reiniciar nivel" aria-label="Reiniciar nivel">
                <img src="/imagenes/icon-reiniciar.svg" alt="Reiniciar" />
            </button>
            <button id="btnSiguiente" class="btn-resumen btn-siguiente" title="Siguiente nivel" aria-label="Siguiente nivel">
                <img src="/imagenes/icon-flecha.svg" alt="Siguiente" />
            </button>
        </div>
    </section>
</div>

<script>
    (function() {
        const resumen = document.getElementById('resumenNivelContainer');
        const btnCasa = document.getElementById('btnCasa');
        const btnReiniciar = document.getElementById('btnReiniciar');
        const btnSiguiente = document.getElementById('btnSiguiente');

        // Mostrar resumen, llamado desde nivel
        window.mostrarResumenNivel = function() {
            resumen.style.display = 'flex';
            resumen.setAttribute('aria-hidden', 'false');
        };

        // Botones redirección
        btnCasa.addEventListener('click', () => {
            window.location.href = '@Url.Action("Niveles", "Home")';
        });
        btnReiniciar.addEventListener('click', () => {
            location.reload();
        });
        btnSiguiente.addEventListener('click', () => {
            window.location.href = '@Url.Action("Nivel2", "Home")';
        });
    })();
</script>