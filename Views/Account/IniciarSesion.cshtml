@{
    ViewData["Title"] = "Iniciar Sesión - EcoPlay";
}

<body>
  <header>
    <img src="~/img/Logo.png" alt="EcoPlay Logo">
  </header>

  <main>
    <section class="Iniciar">
      <h1>Bienvenido</h1>

      <!-- Si hay error, se muestra -->
      @if(ViewBag.Error != null)
      {
        <div style="color:red;">@ViewBag.Error</div>
      }

      <form asp-action="IniciarSesion" asp-controller="Account" method="post">
        <label for="usuario">Correo electrónico / Username:</label>
        <input type="text" id="usuario" name="usuario" required>

        <label for="contraseña">Contraseña:</label>
        <input type="password" id="contraseña" name="contraseña" required>

        <input type="submit" value="Log In">

        <div>
          <a href="#">¿Olvidaste tu contraseña?</a>
          <a asp-controller="Account" asp-action="Registrarse">¿No tienes cuenta?</a>
        </div>
      </form>
    </section>
  </main>
</body>
</html>
