@{
    ViewData["Title"] = "Registrarse - EcoPlay";
}

<body>
  <header>
    <img src="~/img/Logo.png" alt="EcoPlay Logo">
  </header>

  <main class="Registrarse">
    <section>
      <h1>Bienvenido</h1>

      @if (ViewBag.Error != null)
      {
        <div class="alert alert-danger text-center" id="errorMensaje">
          @ViewBag.Error
        </div>
      }

      <form asp-action="Registrarse" asp-controller="Account" method="post">
        <input type="text" id="username" name="username" placeholder="usuario" required>

        <input type="email" id="email" name="email" placeholder="correo electrónico (tutor)" required>

        <input type="password" id="password" name="password" placeholder="contraseña" required>

        <input type="text" id="fecha" name="fecha" placeholder="fecha de nacimiento (dd/mm/aa)" required>

        <input type="submit" onclick=Validar(event) value="Registrarse">

        <div>
          <a asp-controller="Account" asp-action="IniciarSesion">¿Ya tienes cuenta?</a>
        </div>
      </form>
    </section>
  </main>
</body>