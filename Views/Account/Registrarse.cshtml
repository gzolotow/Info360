@{
    ViewData["Title"] = "Registrarse - EcoPlay";
}

<body>
  <header>
    <img src="~/img/Logo.png" alt="EcoPlay Logo">
  </header>

  <main>
    <section class="Registrarse">
      <h1>Crear Cuenta</h1>

      <!-- Si hay error, se muestra -->
      @if(ViewBag.Error != null)
      {
        <div style="color:red;">@ViewBag.Error</div>
      }

      <form asp-action="Registrarse" asp-controller="Account" method="post">
        <label for="username">Nombre de usuario:</label>
        <input type="text" id="username" name="username" required>

        <label for="email">Correo electrónico:</label>
        <input type="email" id="email" name="email" required>

        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" required>

        <label for="fecha">Fecha de nacimiento (dd/mm/aa):</label>
        <input type="text" id="fecha" name="fecha" placeholder="dd/mm/aa" required>

        <input type="submit" value="Registrarse">

        <div>
          <a asp-controller="Account" asp-action="IniciarSesion">¿Ya tienes cuenta?</a>
        </div>
      </form>
    </section>
  </main>
</body>
</html>
